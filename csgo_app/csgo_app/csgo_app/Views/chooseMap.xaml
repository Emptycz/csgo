<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="csgo_app.Views.chooseMap">

    <StackLayout BackgroundColor="White">

        <Label  Margin="50, 50, 0, 0" FontSize="15" >Select a Map for training - Active group</Label>
        <Button x:Name="Mirage" Text="Mirage" HorizontalOptions="StartAndExpand" Margin="40, 50, 0, 0" FontSize="15" Clicked="Mirage_Clicked" />
        <Button x:Name="Train" Text="Train"  HorizontalOptions="StartAndExpand" Margin="140, -55, 0, 0" FontSize="15" Clicked="Train_Clicked" />
        <Button x:Name="Nuke" Text="Nuke"  HorizontalOptions="StartAndExpand" Margin="240, -55, 0, 0" FontSize="15" Clicked="Nuke_Clicked" />
        <Button x:Name="Cache" Text="Cache"  HorizontalOptions="StartAndExpand" Margin="40, 50, 0, 0" FontSize="15" Clicked="Cache_Clicked" />
        <Button x:Name="Cobble" Text="Cobblestone"  HorizontalOptions="StartAndExpand" Margin="120, 0, 0, 0" FontSize="15" Clicked="Cobble_Clicked" />
        <Button x:Name="Overpass" Text="Overpass"  HorizontalOptions="StartAndExpand" Margin="240, -110, 0, 0" FontSize="15" Clicked="Overpass_Clicked"/>

    </StackLayout>
</ContentPage>
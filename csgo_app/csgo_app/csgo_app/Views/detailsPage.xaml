<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="csgo_app.Views.detailsPage">
    <AbsoluteLayout>
        <Label      
      x:Name ="nameL"
      FontSize="20"
      HorizontalTextAlignment="Center"
      AbsoluteLayout.LayoutBounds="0,140,1,40"
      AbsoluteLayout.LayoutFlags="XProportional,WidthProportional">
        </Label>
        <Label 
      x:Name="mapL"
      FontSize="15"
      HorizontalTextAlignment="Center"
      AbsoluteLayout.LayoutBounds="0,180,1,40"
      AbsoluteLayout.LayoutFlags="XProportional,WidthProportional">
        </Label>
        <Label      
      x:Name ="ucastL"
      FontSize="15"
      HorizontalTextAlignment="Center"
      AbsoluteLayout.LayoutBounds="0,340,1,40"
      AbsoluteLayout.LayoutFlags="XProportional,WidthProportional">
        </Label>
        <Label      
      x:Name ="descriptionL"
      FontSize="15"
      HorizontalTextAlignment="Center"
      AbsoluteLayout.LayoutBounds="0,260,1,40"
      AbsoluteLayout.LayoutFlags="XProportional,WidthProportional">
        </Label>
        <Button Margin="150,0,0,0" VerticalOptions="Center" x:Name="DeleteObject" Text="Delete this training" Clicked="DeleteObject_Clicked"/>
        <Button Margin="0,0,0,0" x:Name="RedirectHome" Text="Take me Home" Clicked="RedirectHome_Clicked"/>
    </AbsoluteLayout>
</ContentPage>